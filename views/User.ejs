<%- include("partials/header.ejs") %>
<body>
  <%- include("partials/navbar.ejs") %>
    <section class="form-section">
        <div class="card">
            <div class="card-header">
                <h2>Cadastro de Usuario</h2>
            </div>
            
            <div class="card-body">
            <form action="/user" method="POST">
                <label for="">*Nome </label>
                <input type="text" name="name" id="name" value="<%= nameValue %>" placeholder="Nome Completo" class="form-control" required>
                <label class="form-label-error"> <%= nameError %> </label>

                <label for="">*Email </label>
                <input type="email" name="email" id="email" value="<%= emailValue %>" placeholder="example@hotmail.com" class="form-control" required>
                <label class="form-label-error"> <%= emailError %> </label>
                <label class="form-label-error"> <%= emailExist %> </label>

                <label for="" class="form-label-password">*Senha </label>
                <i class="fas fa-eye eye" id="olho"></i>
                <input type="password" name="password" id="senha" value="<%= passwordValue%>" placeholder="Example: Pedro_Custer03" class="form-control" required>
                <label class="form-label-error"> <%= passwordError %> </label>
            
                <button class="btn btn-danger mt-2" type="submit mt-2">Criar</button>
  
            </form>        
            </div>
        </div>
    </section>
</body>

<%- include("partials/footer.ejs") %> 

