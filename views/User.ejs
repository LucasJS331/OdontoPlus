<%- include("partials/header.ejs") %>
<body>
  <%- include("partials/navbar.ejs") %>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h2>Cadastro de Usuario</h2>
            </div>
            
            <div class="card-body">
            <form action="/user" method="POST">
                <label for="">*Nome: </label>
                <input type="text" name="name" id="name" value="<%= nameValue %>" placeholder="Nome Completo" class="form-control mb-3" required>
                <label for=""> <%= nameError %> </label>

                <label for="">*Email: </label>
                <input type="email" name="email" id="email" value="<%= emailValue %>" placeholder="example@hotmail.com" class="form-control mb-3" required>
                <label for=""> <%= emailError %> </label>
                <label for=""> <%= emailExist %> </label>

                <label for="" class="form-label password">*Senha: </label>
                <img id="olho" src="data:image/png;base64,">  
                <input type="password" name="password" id="senha" value="<%= passwordValue%>" placeholder="Example: Pedro_Custer03" class="form-control mb-3" required>
                <label for=""> <%= passwordError %> </label>
            
                <button class="btn btn-danger mt-2" type="submit">Criar</button>
  
            </form>        
    </div>
</body>

<%- include("partials/footer.ejs") %> 

